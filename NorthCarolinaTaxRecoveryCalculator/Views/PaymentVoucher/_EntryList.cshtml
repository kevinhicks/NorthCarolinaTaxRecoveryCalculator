@model NorthCarolinaTaxRecoveryCalculator.Models.Data.PaymentVoucher

<table class="tablesorter">
    <thead>
        <tr>
            <th>Item</th>
            <th>Cost Element</th>
            <th>Amount</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <tr style="display:none"><td></td><td></td><td></td><td></td></tr>
        @for (int i = 0; i < Model.Entries.Count; i++)
        {            
            <tr>
                <td>
                    @Html.HiddenFor(model => model.Entries[i].PaymentVoucherID)
                    <input name="Entries.Index" value="@i" type="hidden"/>
                    @Html.TextBoxFor(model => model.Entries[i].Item, new {Class = "text_left"})

                </td>
                <td>@Html.TextBoxFor(model => model.Entries[i].CostElement, new {Class = "text_center"})</td>
                <td>@Html.TextBoxFor(model => model.Entries[i].Amount,"{0:C}", new {Class = "text_right amount"})</td>
                <td><a class="deleteLink" href="#" tabindex="-1">Delete</a></td>
            </tr>
        }

        <tr>
            <td style="text-align:right">
                Tax:
            </td>
            <td>
                @Html.TextBoxFor(model => model.TaxCostElement, new {Class = "text_center"})
                @Html.ValidationMessageFor(model => model.TaxCostElement)
            </td>
            <td>
                @Html.TextBoxFor(model => model.TaxAmount,"{0:C}", new {Class = "text_right amount"})
            </td>
        </tr>
    </tbody>
</table>

@model NorthCarolinaTaxRecoveryCalculator.Models.Data.PaymentVoucher

<table class="tablesorter">
    <thead>
        <tr>
            <th>Item</th>
            <th>Cost Element</th>
            <th>Amount</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Entries.Count; i++)
        {
            <tr>
                <td>
                    <input name="Entries.Index" value="@i" type="hidden"/>
                    @Html.TextBoxFor(model => model.Entries[i].Item)

                </td>
                <td>@Html.TextBoxFor(model => model.Entries[i].CostElement)</td>
                <td>@Html.TextBoxFor(model => model.Entries[i].Amount)</td>
                <td><a class="deleteLink" href="#">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

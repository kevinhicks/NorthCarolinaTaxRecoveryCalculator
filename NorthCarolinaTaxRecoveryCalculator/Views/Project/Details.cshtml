@model NorthCarolinaTaxRecoveryCalculator.ViewModels.Project.ProjectOverviewAndCollaboratorsViewModels
@{
    ViewBag.Title = "Details";
}
@section styles {
    <style>
        legend
        {
            border-radius: 10px;
            -moz-border-radius: 10px;
            -webkit-border-radius: 10px;
            background-color: #999CFF;
            padding: 5px;
            margin-left: 20px;
        }
        
        fieldset
        {
            border-radius: 10px;
            -moz-border-radius: 10px;
            -webkit-border-radius: 10px;
            border-width: 1px;
            border-color: black;
            border-style: solid;
            padding: 5px;
        }
        
        h3#taxPeriodHeader
        {
            text-align:center;
        }
    </style>
}
@section scripts {
<script src="~//Scripts/jquery.collapsible.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $(".collapible").collapsible({ defaultOpen: 'taxPeriodHeader'});
        $("table").tablesorter({sortList: [[0, 0]]}) //sort by county automatically
    });
</script>
}

<h2>Details</h2>
<fieldset>
    <legend>Project Overview</legend>
    @Html.ActionLink("Reciepts List", "Index", "Reciept", new { ProjectID = Model.Project.ID }, null) 
    <div class="display-label">
        @Html.DisplayNameFor(model => model.Project.Name)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Project.Name)
    </div>
    <div class="display-label">
        @Html.DisplayNameFor(model => model.Project.DateStarted)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Project.DateStarted)
    </div>
    
    @{Html.RenderAction("ProjectTotals", new { ProjectID = Model.Project.ID });}
</fieldset>
<fieldset>
    <legend>Project Contributors</legend>
    <ol id="collaboratorsList">
        @foreach (var user in Model.UsersAccessProjects)
        {
            if (user != null && user.User != null && user.User.UserName != null)
            {
                <li>@user.User.UserName</li>
            }
            else
            {
                <li>@user.Email</li>
            }
        }
    </ol>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Project.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
